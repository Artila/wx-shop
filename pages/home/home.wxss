/* pages/home/home.wxss */
page {
    display: flex;
    flex-direction: column;
    height: 100%;
}
.navbar {
    flex: none;
    display: flex;
    background: #fff;
}
.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
    font-size: 14px;
}
.navbar .item.active {
    color: #f0145a;
}
/* 当前item的底部线 */
.navbar .item.active::after {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    background: #f0145a;
}
/* swiper */
swiper {
    height: 300rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}